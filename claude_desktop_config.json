{
  "mcpServers": {
    "openproject": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "openproject-mcp-server",
        "python3",
        "/app/src/mcp_server.py"
      ],
      "env": {
        "OPENPROJECT_URL": "http://host.docker.internal:8686",
        "OPENPROJECT_API_KEY": "your_api_key_here"
      }
    }
  }
}
